{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ai-workflow-builder.com/schemas/variable.json",
  "title": "Variable",
  "description": "Shared workflow variable",
  "type": "object",
  "required": ["id", "name", "type"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique variable identifier",
      "pattern": "^[a-zA-Z0-9-_]+$"
    },
    "name": {
      "type": "string",
      "description": "Variable name",
      "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$"
    },
    "type": {
      "type": "string",
      "description": "Variable data type",
      "enum": ["string", "number", "boolean", "array", "object", "null"]
    },
    "value": {
      "description": "Variable value (any type)"
    },
    "description": {
      "type": "string",
      "description": "Variable description"
    },
    "scope": {
      "type": "string",
      "description": "Variable scope",
      "enum": ["global", "workflow", "node"],
      "default": "workflow"
    },
    "mutable": {
      "type": "boolean",
      "description": "Whether variable can be modified",
      "default": true
    }
  }
}
